extends layout

block content
    .card.post
        .top
            img#header-image(src=post.image)
            .bar
                .title
                    h2= post.title
                .date= post.date
        p
            strong= post.description
        | !{post.body}

block bottom
    .card.also-like
        .title Have a look at one of these
        .more.right >
        .more.left <
        ul
            .entries
                each similar, index in post.similar
                    li.entry
                        img(src=similar.image)
                        h3= similar.title
                        .date= similar.date
